<h1>Here are your lists!!</h1>

<div>
  <% @lists.each do |list| %>
    <div class="list-card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(/assets/popcorn.png)">
      <div>
        <button class="btn btn-primary btn-sm"><%= link_to list.name, list_path(list) %></button>
        <%# styling in _button.scss is if ^^ this button's class is changed to javascript-button %>
      </div>
      <div>
        <button class="btn btn-primary btn-sm"><%= link_to '--- Edit 📝 🔎 🖍 ✂️ 🧷', edit_list_path(list)  %></button>
        <button class="btn btn-primary btn-sm"><%= link_to '--- Delete ✂️ 🚫 🚨', list_path(list), method: :delete, data: { confirm: "Are you sure?" } %></button>
      </div>
    </div>
  <% end %>

  <li><%= link_to 'Add a new list 📝 !!!', new_list_path %></li>

</div>


<h2>Here are your movies!!</h2>

<div class="cards">

  <% @movies.each do |movie| %>

    <div class="card-category" data-aos="zoom-in-up" data-aos-duration=90 style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
      <h4><%= movie.title %></h4>
      <h4><%=  %></h4>
    </div>
  <% end %>

</div>
